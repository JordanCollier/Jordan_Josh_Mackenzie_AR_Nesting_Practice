<table class="table table-striped">
 <thead>
   <tr>
     <th>Name</th>
     <th>Suffix</th>
     <th>Catch Phrase</th>
     <th>Email</th>
     <th>Start Date</th>
     <th>Industry</th>

     <th colspan="3"></th>
   </tr>
 </thead>


 <tbody>


   <% @companies.each do |company| %>
     <tr>
       <td><%= link_to company.name, company_path(company) %></td>
       <td><%= company.suffix %></td>
       <td><%= company.catch_phrase %></td>
       <td><%= company.email %></td>
       <td><%= company.start_date %></td>
       <td><%= company.industry %></td>


       <td class="text-right">
         <td><%= link_to 'Edit', edit_company_path(company), class: "btn btn-info" %></td>
         <td><%= link_to 'Destroy', company, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>

       </td>

   </tr>


   <% end %>


 </tbody>
</table>
